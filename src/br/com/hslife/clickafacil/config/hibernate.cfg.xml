<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://hslifeserver.hslife.local:3306/clickafacil</property>
    <property name="hibernate.connection.username">clickafacil</property>
    <property name="hibernate.connection.password">clickafacil</property>
    <property name="hibernate.connection.autoReconnect">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping class="br.com.hslife.clickafacil.javabeans.Categoria"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Grupo"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.InfoAdicionais"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Internauta"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Login"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Funcionario"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Loja"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Produto"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Comentario"/>
    <mapping class="br.com.hslife.clickafacil.javabeans.Preco"/>
  </session-factory>
</hibernate-configuration>
